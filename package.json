{
  "name": "twitter-x",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:timeline": "pnpm --filter timeline-services dev",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:api\""
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
